<ul>
  <% if ::Refinery::Locations::Admin::RegionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.locations_admin_regions_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('refinery.locations.admin.regions.index.create_new'), refinery.new_locations_admin_region_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Locations::Admin::RegionsController.sortable? && ::Refinery::Locations::Region.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Regions"),
                 refinery.locations_admin_regions_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Regions"),
                 refinery.locations_admin_regions_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
<hr />
<ul>
  <li>
    <%= link_to t('refinery.locations.admin.regions.show.switch'), 
        refinery.locations_admin_locations_path,
        :class => "layout_edit_icon" -%>
  </li>
</ul>
