<%= form_for [refinery, :locations_admin, @region] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @region,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
    
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.locations.admin.regions.region'),
             :delete_confirmation => deletion_confirmation_massage(@region) %>
<% end -%>
