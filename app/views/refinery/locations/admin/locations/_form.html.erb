<%= form_for [refinery, :locations_admin, @location] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @location,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :state_or_province -%>
    <%= f.text_field :state_or_province, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :website -%>
    <%= f.text_field :website, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :hours -%>
    <%= f.text_field :hours, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :longitude -%>
    <%= f.text_field :longitude, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :latitude -%>
    <%= f.text_field :longitude, :class => 'larger widest'  -%>
  </div>

   <div class='field'>
    <%= f.label :online -%>
    <%= f.select :online, [['True', true], ['False', false]] -%>
  </div>


  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.locations.admin.locations.location'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @location.name) %>
<% end -%>
